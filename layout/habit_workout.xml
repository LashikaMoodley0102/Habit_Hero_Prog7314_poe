<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/final_background">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonSaveWorkout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Exit Button -->
            <ImageButton
                android:id="@+id/btnExit3"
                android:layout_width="85dp"
                android:layout_height="94dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:contentDescription="Close"
                android:scaleType="fitCenter"
                android:src="@drawable/exit_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- Title -->
            <TextView
                android:id="@+id/textView24"
                android:layout_width="338dp"
                android:layout_height="121dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/abeezee"
                android:text="Workout Tracker"
                android:textAlignment="center"
                android:textColor="#393D81"
                android:textSize="48sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Instructions -->
            <TextView
                android:id="@+id/textView25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/abeezee"
                android:text="Please press either the plus button to add 15 minutes to your workout, or you can press the minus button to subtract 15 minutes from your workout."
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/textView24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Workout Bunny Image -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="350dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/workout_bunny"
                app:layout_constraintTop_toBottomOf="@id/textView25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/workout_minus"
                app:layout_constraintTop_toTopOf="@id/imageView"
                app:layout_constraintStart_toStartOf="@id/imageView"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"/>

            <!-- Minus Label -->
            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="SUBTRACT"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imageButton3"
                app:layout_constraintStart_toStartOf="@id/imageButton3"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="15 MINS"
                app:layout_constraintTop_toBottomOf="@id/textView26"
                app:layout_constraintStart_toStartOf="@id/imageButton3"
                android:layout_marginTop="2dp"/>

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/workout_plus"
                app:layout_constraintTop_toTopOf="@id/imageView"
                app:layout_constraintEnd_toEndOf="@id/imageView"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="50dp"/>

            <!-- Plus Label -->
            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="ADD"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imageButton2"
                app:layout_constraintStart_toStartOf="@id/imageButton2"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="15 MINS"
                app:layout_constraintTop_toBottomOf="@id/textView27"
                app:layout_constraintStart_toStartOf="@id/imageButton2"
                android:layout_marginTop="2dp"/>

            <!-- Alternative Instructions -->
            <TextView
                android:id="@+id/textView30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="Alternatively, you can input the exact number of minutes or hours you worked out for below."
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp"/>

            <!-- Edit Text -->
            <EditText
                android:id="@+id/editTextText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:inputType="text"
                android:text="Please enter the number of minutes or hours worked out:"
                android:textColor="#69696A"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/textView30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Save Workout Button anchored to bottom -->
    <Button
        android:id="@+id/buttonSaveWorkout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Workout"
        android:backgroundTint="#2170C1"
        android:fontFamily="@font/abeezee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
