<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/final_background"
    tools:context=".CustomHealthHabitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Page Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Custom Health Goal"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#393D81"
            android:fontFamily="@font/abeezee"
            android:layout_marginBottom="24dp" />

        <!-- Health Goal Title -->
        <EditText
            android:id="@+id/editTextHealthTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Goal Title"
            android:backgroundTint="#B291DE"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Health Description -->
        <EditText
            android:id="@+id/editTextHealthDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Goal Description"
            android:backgroundTint="#B291DE"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Target Value -->
        <EditText
            android:id="@+id/editTextHealthTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Target Value (e.g., kg, steps)"
            android:inputType="numberDecimal"
            android:backgroundTint="#B291DE"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Current Value -->
        <EditText
            android:id="@+id/editTextHealthCurrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current Value"
            android:inputType="numberDecimal"
            android:backgroundTint="#B291DE"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/buttonSaveHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#4F87BA"
            android:fontFamily="@font/abeezee"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="Save Goal"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
