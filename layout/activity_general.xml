<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/final_background"
    android:padding="16dp"
    tools:context=".GeneralActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/textView39"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee"
        android:text="Select your general habits"
        android:textAlignment="center"
        android:textColor="#393D81"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/textView51"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select which general habits you would like to add. If you don't see one you like, create your own!"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/textView39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- MOOD OF THE DAY Button -->
    <Button
        android:id="@+id/button14"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:backgroundTint="#E4AFE7"
        android:text="MOOD OF THE DAY"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textView51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- JOURNAL Button -->
    <Button
        android:id="@+id/button12"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:backgroundTint="#E4AFE7"
        android:text="JOURNAL"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/button14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- TO DO LIST Button -->
    <Button
        android:id="@+id/button11"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:backgroundTint="#E4AFE7"
        android:text="TO DO LIST"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/button12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- CUSTOM HABIT Button -->
    <Button
        android:id="@+id/button13"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:backgroundTint="#E4AFE7"
        android:text="CUSTOM HABIT"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/button11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- "+" Add Habit Button -->
    <Button
        android:id="@+id/button26"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:backgroundTint="#D09AF2"
        android:text="+"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
