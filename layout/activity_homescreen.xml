<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/final_background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Welcome Texts -->
            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="Welcome back &quot;Users name&quot;"
                android:textAlignment="center"
                android:textColor="#393D81"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="Your daily progress."
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="Here you are able to view your progress for the day and see how close you are to achieving your daily habit goals!"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"/>

            <!-- Plus Button ABOVE grid -->
            <Button
                android:id="@+id/buttonNewHabit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to New Habit"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_centerHorizontal="true" />


            <!-- Dashboard Grid -->
            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                android:layout_gravity="center">

                <!-- Habit Items -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ProgressBar
                        android:id="@+id/progressWater"
                        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminateTint="#7AC7E9"
                        android:backgroundTint="#94EAE4EF"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WATER"
                        android:textAlignment="center"
                        android:textColor="#121111"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ProgressBar
                        android:id="@+id/progressWorkout"
                        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminateTint="#7AC7E9"
                        android:backgroundTint="#94EAE4EF"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WORKOUT"
                        android:textAlignment="center"
                        android:textColor="#121111"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ProgressBar
                        android:id="@+id/progressSleep"
                        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminateTint="#7AC7E9"
                        android:backgroundTint="#94EAE4EF"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SLEEP"
                        android:textAlignment="center"
                        android:textColor="#121111"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ProgressBar
                        android:id="@+id/progressMeditate"
                        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminateTint="#7A55E3"
                        android:backgroundTint="#94EAE4EF"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MEDITATE"
                        android:textAlignment="center"
                        android:textColor="#121111"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ProgressBar
                        android:id="@+id/progressSavings"
                        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminateTint="#7A55E3"
                        android:backgroundTint="#94EAE4EF"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAVINGS"
                        android:textAlignment="center"
                        android:textColor="#121111"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ProgressBar
                        android:id="@+id/progressRead"
                        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminateTint="#7AC7E9"
                        android:backgroundTint="#94EAE4EF"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="READ"
                        android:textAlignment="center"
                        android:textColor="#121111"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </GridLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
